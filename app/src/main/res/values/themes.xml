<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Donasi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTextInputLayoutOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textColor">@color/blue</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="color">@color/blue</item>
        <item name="endIconTint">@color/dark_grey</item>
        <item name="helperTextTextColor">@color/dark_grey</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/blue</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/blue</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/blue</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/blue</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/blue</item>
    </style>
</resources>