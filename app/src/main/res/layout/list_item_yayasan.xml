<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/wrapperYayasan1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="8dp"
        android:elevation="12dp"
        android:focusable="true"
        card_view:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/wrapperYayasan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_image_list"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="4dp" />

            <TextView
                android:id="@+id/txtNamaLengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HAIIIIIIIIIIIIIIII"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/img1"
                android:paddingHorizontal="10dp"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:layout_below="@+id/txtNamaLengkap"
                android:layout_toRightOf="@+id/img1"
                android:paddingHorizontal="10dp"
                android:paddingTop="6dp"/>

            <TextView
                android:id="@+id/notlp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Telpon"
                android:layout_below="@+id/txtEmail"
                android:layout_toRightOf="@+id/img1"
                android:paddingHorizontal="10dp"
                android:paddingTop="6dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>

